{
	"name": "yajer",
	"displayName": "YAJER",
	"description": "Yet Another Jest Runner",
	"publisher": "styordanov",
	"author": "Stoyan Yordanov",
	"repository": {
		"type": "git",
		"url": "https://github.com/styordanov/yajer.git"
	},
	"license": "MIT",
	"icon": "media/icon.png",
	"version": "0.1.2",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "yajer",
					"name": "Yet Another Jest Runner",
					"when": "hasTestsInView"
				}
			]
		},
		"configuration": [
			{
				"title": "Yet Another Jest Runner",
				"properties": {
					"yajer.jestCommand": {
						"type": "string",
						"default": "",
						"markdownDescription": "%configuration.jest.command.description%",
						"scope": "window"
					},
					"yajer.jestConfig": {
						"type": "string",
						"default": "",
						"markdownDescription": "%configuration.jest.config.description%",
						"scope": "window"
					},
					"yajer.jestConfigPatterns": {
						"type": "string",
						"default": "",
						"markdownDescription": "%configuration.jest.config.patterns.description%",
						"scope": "window"
					}
				}
			}
		],
		"commands": [
			{
				"command": "yajer.run.test.context",
				"title": "%command.run.test.title%",
				"icon": {
					"dark": "/media/continue-dark.svg",
					"light": "/media/continue-light.svg"
				}
			},
			{
				"command": "yajer.run.file.context",
				"title": "%command.run.file.title%",
				"icon": {
					"dark": "/media/continue-dark.svg",
					"light": "/media/continue-light.svg"
				}
			},
			{
				"command": "yajer.debug.file.context",
				"title": "%command.debug.file.title%",
				"icon": {
					"dark": "/media/debug-dark.svg",
					"light": "/media/debug-light.svg"
				}
			},
			{
				"command": "yajer.config.reset.context",
				"title": "%command.config.reset.title%",
				"icon": {
					"dark": "/media/restart-dark.svg",
					"light": "/media/restart-light.svg"
				}
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "yajer.run.file.context",
					"when": "view == yajer",
					"group": "navigation@1"
				},
				{
					"command": "yajer.debug.file.context",
					"when": "view == yajer",
					"group": "navigation@2"
				},
				{
					"command": "yajer.config.reset.context",
					"when": "view == yajer",
					"group": "navigation@3"
				}
			],
			"view/item/context": [
				{
					"command": "yajer.run.test.context",
					"when": "view == yajer && viewItem == test",
					"group": "inline"
				},
				{
					"command": "yajer.run.test.context",
					"when": "view == yajer && viewItem == test",
					"group": "navigation@1"
				},
				{
					"command": "yajer.run.file.context",
					"when": "view == yajer && viewItem == test",
					"group": "navigation@2"
				},
				{
					"command": "yajer.config.reset.context",
					"when": "view == yajer && viewItem == test",
					"group": "z_commands@1"
				}
			]
		}
	},
	"main": "./out/extension.js",
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.6",
		"@types/node": "^10.12.21",
		"@types/vscode": "^1.39.0",
		"glob": "^7.1.4",
		"mocha": "^6.1.4",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode-test": "^1.2.0"
	},
	"dependencies": {
		"upath": "^1.2.0",
		"glob": "^7.1.4"
	}
}
